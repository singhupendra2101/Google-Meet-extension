{
  "manifest_version": 3,
  "name": "Google Meet Summarizer",
  "version": "1.0",
  "description": "Summarize Google Meet meetings using AI.",
  
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabCapture"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/extension-cable.png"

  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
