{
  "manifest_version": 3,
  "name": "Google Meet Notes Extension",
  "version": "2.1",
  "description": "Captures Google Meet captions and saves them to your account.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "login.html",
    "default_icon": {
      "16": "icons/icon.jpg",
      "48": "icons/icon.jpg",
      "128": "icons/icon.jpg"
    }
  },
  "icons": {
    "16": "icons/icon.jpg",
    "48": "icons/icon.jpg",
    "128": "icons/icon.jpg"
  }
}